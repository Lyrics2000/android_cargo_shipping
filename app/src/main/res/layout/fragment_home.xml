<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiesn"
    tools:context=".fragment.HomeFragment">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/today_day"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="24"
                android:textColor="@color/black"
                android:textSize="44sp"

                android:layout_marginStart="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/calendayDAY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/poppins"
                    android:text="Wed"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/theMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Augaust 2022"
                    android:textSize="14sp" />
            </LinearLayout>








            <TextView
                android:id="@+id/priceUpNoneJo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Ksh 4,000"
                android:textColor="@color/maroon"

                android:padding="5dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:textSize="25sp"
                android:gravity="right"
                android:layout_marginTop="10dp"

                />


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/btn_white_k">

            <ProgressBar
                android:id="@+id/MainMenuProgress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


        </LinearLayout>
    </LinearLayout>



</FrameLayout>